<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConfirmacionDatos">

    <TextView
        android:id="@+id/tvTituloConfirmarDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen_arriba"
        android:layout_gravity="center"
        android:textSize="@dimen/titulo"
        android:text="@string/confirmar_datos"
        />

    <TextView
        android:id="@+id/tvConfirmaNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen_arriba"
        android:layout_marginHorizontal="@dimen/margen_horizontal"
        />

    <TextView
        android:id="@+id/tvConfirmaFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen_arriba"
        android:layout_marginHorizontal="@dimen/margen_horizontal"
        />

    <TextView
        android:id="@+id/tvConfirmaTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen_arriba"
        android:layout_marginHorizontal="@dimen/margen_horizontal"
        />

    <TextView
        android:id="@+id/tvConfirmaEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen_arriba"
        android:layout_marginHorizontal="@dimen/margen_horizontal"
        />

    <TextView
        android:id="@+id/tvConfirmaDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen_arriba"
        android:layout_marginHorizontal="@dimen/margen_horizontal"
        />

    <Button
        android:id="@+id/boton_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boton_editar"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margen_arriba"
        />

</LinearLayout>